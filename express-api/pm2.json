{
  "apps": [
    {
      "name": "okuz-ai-api",
      "script": "./dist/index.js",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_file": "./logs/combined.log",
      "time": true,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "node_args": "--max-old-space-size=4096",
      "kill_timeout": 5000,
      "restart_delay": 4000,
      "max_restarts": 10,
      "min_uptime": "10s"
    }
  ]
} 