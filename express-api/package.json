{
  "name": "okuz-ai-api",
  "version": "1.0.0",
  "description": "Okuz AI Express API - Firebase Functions Alternative",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "pm2:start": "pm2 start dist/index.js --name okuz-ai-api",
    "pm2:stop": "pm2 stop okuz-ai-api",
    "pm2:restart": "pm2 restart okuz-ai-api",
    "pm2:logs": "pm2 logs okuz-ai-api",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build -t okuz-ai-api .",
    "docker:run": "docker run -p 3000:3000 okuz-ai-api"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "firebase-admin": "^12.0.0",
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "express",
    "api",
    "firebase",
    "ai",
    "education",
    "typescript"
  ],
  "author": "Okuz AI Team",
  "license": "MIT"
} 